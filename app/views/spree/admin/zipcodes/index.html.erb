<%= render :partial => 'spree/admin/shared/configuration_menu' %>

<% content_for :page_title do %>
  <%= t(:zip_codes) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to t(:new_zip_code), new_object_url, :icon => 'icon-plus', :id => 'admin_new_zipcode_link' %>
  </li>
<% end %>

<table class="index">
  <colgroup>
    <col style="width: 85%" />
    <col style="width: 15%" />
  </colgroup>
  <thead>
    <tr>
      <th><%= t('value') %></th>
      <th class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @zipcodes.each do |zipcode| %>
      <tr>
        <td><%= zipcode.name %></td>
        <td class="actions">
          <%=link_to_edit zipcode, :no_text => true %>
          <%=link_to_delete zipcode, :no_text => true %>
        </td>
      </tr>
    <% end %>
    <% if @zipcodes.empty? %>
      <tr><td colspan="2"><%= t('none') %></td></tr>
    <% end %>
  </tbody>
</table>

<p>
  <%= button_link_to t('new_zipcode'), new_admin_zipcode_url, :icon => 'add' %>
</p>